#!/bin/bash 

#dotfiles

for i in alacritty anime-downloader bspwm dunst flameshot gtk-2.0 gtk-3.0 mpv  pcmanfm picom polybar qt5ct qutebrowser rofi sxhkd terminator zathura ranger kitty
do  cp -r -u -v ~/.config/"$i"/. /mnt/work/git/dotfiles/"$i"
done

 cp -r -u -v ~/.config/okularrc /mnt/work/git/dotfiles
 cp -r -u -v ~/.config/okularpartrc /mnt/work/git/dotfiles
 cp -r -u -v ~/.Xresources /mnt/work/git/dotfiles
 cp -r -u -v ~/.Xresources /mnt/work/git/marble


 cp -r -u -v ~/.config/bspwm/bin/* /mnt/work/git/bin/
 cp -r -u -v ~/.config/bspwm/bin/* /mnt/work/git/dotfiles/bin/


for i in alacritty  bspwm  gtk-2.0  gtk-3.0  picom  polybar  rofi  sxhkd kitty
do  cp -r -u -v ~/.config/"$i"/. /mnt/work/git/marble/"$i"
done


rm -rf /mnt/work/git/dotfiles/mpv/watch_later

rm -rf /mnt/work/git/dotfiles/qutebrowser/backup
rm -rf /mnt/work/git/marble/bspwm/bin
rm -rf /mnt/work/git/dotfiles/bspwm/bin