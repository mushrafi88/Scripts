#kemono
youtube-dl -ci -f 'bestvideo[height=1080]+bestaudio/best' --write-sub --embed-subs --yes-playlist  -o "/mnt/media_m/Anime/Airing/kimono_jihen/%(title)s.%(ext)s" --download-archive dl.txt 'https://www.youtube.com/playlist?list=PLwLSw1_eDZl1YS_pINBRcstuSCSgO4EGj' 



export PATH="${PATH}:$HOME/.local/bin"


#horimiya
anime dl -c 1 -e $((1+$(cat /mnt/media_m/Anime/Airing/Horimiya/episode.txt))):  --download-dir /mnt/media_m/Anime/Airing/Horimiya 'horimiya'



#tensei shitara
anime dl -e $((1+$(cat /mnt/media_m/Anime/Airing/tensei_shitara_slime_2nd_season/episode.txt))): 'https://animekisa.tv/tensei-shitara-slime-datta-ken-2nd-season' --download-dir /mnt/media_m/Anime/Airing/tensei_shitara_slime_2nd_season


#log horizon
#anime dl -c 4 -p vidstream -e $((1+$(cat /mnt/media_m/Anime/Airing/log_horizon/episode.txt))): --download-dir /mnt/media_m/Anime/Airing/log_horizon 'log horizon'


#wonder egg priority
anime dl -c 1 -p vidstream -e $((1+$(cat /mnt/media_m/Anime/Airing/wonder_egg/episode.txt))): --download-dir /mnt/media_m/Anime/Airing/wonder_egg 'wonder egg priority'




#sasageyo
anime dl -c 1 -p tenshi.moe -e $((1+$(cat /mnt/media_m/Anime/Airing/shingeki_no_kyojin/episode.txt))): --download-dir  /mnt/media_m/Anime/Airing/shingeki_no_kyojin/ 'shingeki no kyojin final'





